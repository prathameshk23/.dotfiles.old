#! /bin/sh


eww daemon &
eww close-all
eww open bar

pgrep -x sxhkd > /dev/null || sxhkd &

bspc monitor -d 1 2 3 4 5

bspc config border_width            2
bspc config window_gap              12
bspc config top_padding             52

bspc config split_ratio             0.50
bspc config borderless_monocle      true
bspc config gapless_monocle         true

# Monocle layout over bar
bspc config top_monocle_padding     -52

# Set desktop 3 and 4 to monocle layout
bspc desktop "^3" -l monocle
bspc desktop "^4" -l monocle

# Application specific rules
bspc rule -a discord state=fullscreen desktop="^4"
bspc rule -a chromium state=fullscreen

# Theme
bspc config normal_border_color "#44475a"
bspc config active_border_color "#bd93f9"
bspc config focused_border_color "#ff79c6"
bspc config presel_feedback_color "#6272a4"
